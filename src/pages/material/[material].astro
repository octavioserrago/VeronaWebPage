                        <p>{materialData.additionalDetails}</p>
                    </section>
                </div>
            </section>
            <div class="chapaC w-full p-4 mb-8 lg:pl-32 lg:pr-32">
                <h2
                    class="text-2xl text-left pb-2 font-normal"
                    style="font-family:San Francisco Display Ultralight;"
                >
                    Detalles de la tabla completa {material}
                </h2>

                <div id="chapaContainer" class="relative w-full">
                    <img
                        id="chapaCompleta"
                        src={materialData.chapa}
                        class="w-full"
                        alt={material}
                    />
                    <div
                        id="zoomCircle"
                        class="absolute border border-gray-500 rounded-full pointer-events-none"
                    >
                    </div>
                </div>
                <a href="/silestone">
                    <p
                        class="text-center text-xl hover:underline pt-8 hover:text-yellow-500"
                    >
                        <i class="fa-solid fa-reply"></i> Volver al catalogo de Silestone
                    </p>
                </a>
            </div>
            <Footer />
        </main>
    </main>

    <script>
        document
            .getElementById("chapaCompleta")
            .addEventListener("mousemove", function (e) {
                var img = e.target as HTMLImageElement;
                var zoomCircle = document.getElementById("zoomCircle");
                var rect = img.getBoundingClientRect();
                var x = e.clientX - rect.left;
                var y = e.clientY - rect.top;
                var bgX = x - zoomCircle.offsetWidth / 2;
                var bgY = y - zoomCircle.offsetHeight / 2;
                zoomCircle.style.left = x - zoomCircle.offsetWidth / 2 + "px";
                zoomCircle.style.top = y - zoomCircle.offsetHeight / 2 + "px";
                zoomCircle.style.display = "block";
                zoomCircle.style.backgroundImage = "url(" + img.src + ")";
                zoomCircle.style.backgroundRepeat = "no-repeat";
                zoomCircle.style.backgroundSize =
                    img.width * 2 + "px " + img.height * 2 + "px";
                zoomCircle.style.backgroundPosition =
                    "-" + bgX * 2 + "px -" + bgY * 2 + "px";
            });

        document
            .getElementById("chapaCompleta")
            .addEventListener("mouseleave", function () {
                document.getElementById("zoomCircle").style.display = "none";
            });

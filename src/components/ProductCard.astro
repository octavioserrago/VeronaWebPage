---
interface Props {
    linkImagen: string;
    altImagen: string;
    title: string;
    body: string;
    href: string;
}

const { href, linkImagen, altImagen, title, body } = Astro.props;
---

<div class="flex flex-col">
    <div class="flex-shrink-0">
        <a href={href}>
            <img src={linkImagen} alt={altImagen} />
        </a>
    </div>
    <div class="flex flex-1 flex-col justify-between bg-slate-50 p-6">
        <div class="flex-1">
            <a href="#" class="mt-2 block">
                <p class="text-xl font-semibold text-gray-900">
                    {title}
                </p>
                <p class="mt-3 text-base text-gray-500">
                    {body}
                </p>
            </a>
            <button class="mt-4 bg-yellow-400 text-white px-4 py-2 rounded-md"
                >Ver m√°s</button
            >
        </div>
    </div>
</div>

<style>
    .title {
        background: linear-gradient(45deg, #ffd700, #ffaf00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .videoWrapper {
        position: relative;
        width: 100%;
        height: 100%;
    }

    video {
        width: 100%;
        height: 100%;
        mask-image: radial-gradient(
            circle,
            rgba(0, 0, 0, 1) 60%,
            rgba(0, 0, 0, 0) 100%
        );
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4);
        justify-content: center;
        align-items: center;
    }
    .modal-content {
        border-radius: 5px;
        background-color: white;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 400px;
        text-align: center;
    }
    .modal-button {
        margin: 10px;
        padding: 10px 20px;
        cursor: pointer;
        background-color: #ffaa00;
        color: black;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }
    .modal-button:hover {
        background-color: #e39700;
    }
</style>

<script>
    document
        .getElementById("wppButton")
        .addEventListener("click", function (event) {
            event.preventDefault();
            document.getElementById("modal").style.display = "flex";
        });

    document
        .getElementById("fabricaButton")
        .addEventListener("click", function () {
            window.location.href =
                "https://wa.me/1159906984?text=Hola,%20vengo%20desde%20la%20pagina%20web,%20tengo%20una%20consulta!";
        });

    document
        .getElementById("localButton")
        .addEventListener("click", function () {
            window.location.href =
                "https://wa.me/1162922173?text=Hola,%20vengo%20desde%20la%20pagina%20web,%20tengo%20una%20consulta!";
        });

    document
        .getElementById("azarButton")
        .addEventListener("click", function () {
            let randomValue = Math.random();
            console.log("Random Value:", randomValue);
            let randomLink =
                randomValue < 0.5
                    ? "https://wa.me/1159906984?text=Hola,%20vengo%20desde%20la%20pagina%20web,%20tengo%20una%20consulta!"
                    : "https://wa.me/1162922173?text=Hola,%20vengo%20desde%20la%20pagina%20web,%20tengo%20una%20consulta!";
            console.log("Selected Link:", randomLink);
            window.location.href = randomLink;
        });

    window.onclick = function (event) {
        if (event.target == document.getElementById("modal")) {
            document.getElementById("modal").style.display = "none";
        }
    };
</script>
